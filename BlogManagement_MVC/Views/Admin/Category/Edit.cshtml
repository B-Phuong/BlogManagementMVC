@model CategoryVM
@{
    Layout = "_LayoutAdmin";
}
<div></div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Category" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (@Model.ParentID == null)
            {

            }
            else
            {
                <div class="form-group">
                    <label class="control-label">Category</label>
                    <select id="selectItem" name="listCategory" class="form-control" asp-items="ViewBag.list">
                    </select>
                    @* <span asp-validation-for="Title" class="text-danger"></span>  new SelectList*@
                </div>
            }
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"></input>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            @*
                <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
                </div>*@
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
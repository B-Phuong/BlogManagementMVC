@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}


<partial name="_HeaderPartial" />

<div class="container wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
    <div id="hiroHeaderCarousel" class="hiro-header-carousel carousel slide" data-ride="carousel" data-interval="3500">
        <div class="carousel-inner" role="listbox">


            <div class="row">
                <div style="width: 60%; margin: auto; margin-bottom: 10px; background: #e7ebf0; border-radius: 20px; box-shadow: rgb(0 0 0 / 20%) 0px 2px 1px -1px, rgb(0 0 0 / 14%) 0px 1px 1px 0px, rgb(0 0 0 / 12%) 0px 1px 3px 0px " class="col-md-4">
                    <div>
                        <h1 style="text-align: center; margin-bottom: 0px; margin-top: 16px">@ViewData["Title"]</h1>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            @*<h4>Create a new account</h4>*@
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.FirstName"></label>
                                <input asp-for="Input.FirstName" class="form-control" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.LastName"></label>
                                <input asp-for="Input.LastName" class="form-control" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.MiddleName"></label>
                                <input asp-for="Input.MiddleName" class="form-control" />
                                <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.PhoneNumber"></label>
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div style="margin: auto; width: 30%" class="form-group">
                                <button style="width: 100%; background-color: #44d7b6" type="submit" class="btn btn-primary">Register</button>
                            </div>
                                
                        </form>
                        <div style="display: flex; margin: auto; width: 80%">
                            <p style="text-align: center; width: 60%; margin: auto 0 auto 0"> Or Register With </p>
                            <button style="font-size: 25px; color: #fff; display: -webkit-box; display: -webkit-flex; display: -moz-box; display: -ms-flexbox; display: flex; justify-content: center; align-items: center; width: 50px; height: 50px; border-radius: 50%; margin: 5px; background-color: #ea4335; border: 2px solid #e7e7e7; ">
                                G
                            </button>
                        </div>
                    </div>
                   
